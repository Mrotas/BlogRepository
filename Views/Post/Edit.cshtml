@model BlogRepository.Models.Post.PostViewModel
@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-12">

            <!-- Title -->
            <div class="form-group">

                <form action="~/Post/Update" method="post">
                    <h1>Tytuł:</h1>
                    <input asp-for="Title" name="Title" class="form-control" required />

                    <hr>

                    <!-- Preview Image -->
                    <img class="img-fluid rounded" src="http://placehold.it/1200x500" alt="">

                    <hr>

                    <h3>Treść:</h3>
                    <!-- Post Content -->
                    <textarea asp-for="Content" name="Content" class="form-control" style="height:400px" required></textarea>

                    <hr>

                    <h6>Tagi:</h6>
                    <input asp-for="Tags" name="Tags" class="form-control" required />

                    <input asp-for="Id" hidden />

                    <button class="btn btn-success" style="float:right; margin-top:20px" type="submit">Zapisz</button>
                    <button class="btn btn-primary" style="float:right; margin-top:20px; margin-right: 20px" type="submit" formaction="~/Blog/MyBlog">Anuluj</button>
                </form>

            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->