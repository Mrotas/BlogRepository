@model BlogRepository.Models.BlogViewModel

@{
    ViewData["Title"] = "ViewBlog";
}

<style>
.no-side-paddings{
    padding-left: 0px;
    padding-right: 0px;
}
</style>

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Name
        <small>wyświetlono @Model.Views razy</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="no-side-paddings col-md-8">
            <img class="img-fluid" src="http://placehold.it/750x500" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Opis bloga</h3>
            <p>@Model.Description</p>
            @*<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae. Sed dui lorem, adipiscing in adipiscing et, interdum nec metus. Mauris ultricies, justo eu convallis placerat, felis enim.</p>
            <h3 class="my-3">Project Details</h3>
            <ul>
                <li>Lorem Ipsum</li>
                <li>Dolor Sit Amet</li>
                <li>Consectetur</li>
                <li>Adipiscing Elit</li>
            </ul>*@
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Ostatnie posty...</h3>

    <div class="row">

        @{ var recentPosts = Model.Posts.Count >= 4 ? Model.Posts.Take(4) : Model.Posts; }
        @foreach (var post in recentPosts)
        {
            <div class="card no-side-paddings col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                </a>
                <div class="card-body">
                    <h2 class="card-title">@post.Title</h2>
                    @{var postPreview = (post.Content.Length >= 50 ? post.Content.Take(50) : post.Content) + "..."; }
                    <p class="card-text">@postPreview</p>
                    <a href="#" class="btn btn-primary">Czytaj więcej &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    Dodano @post.Created
                    Wyświetlenia: @post.Views
                </div>
            </div>
        }

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->